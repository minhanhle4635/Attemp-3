<h2><%= book.title %></h2>
<a href="/books/<%= book.id %>"><img width="100" height="150" src="<%= book.coverImagePath %>"></a>
<div>
    
    Author: <a href="/authors/<%= book.author.id %>"><%= book.author.name %></a>
</div>

<div>
    Published Date: <%= book.publishDate.toDateString() %>
</div>

<div> Description: <%= book.description %> </div>

<div>File: <%= book.fileName %>
    <a href="<%= book.filePath %>" download="<%= book.title %>">Download</a>
</div>

<a href="/books/<%= book._id %>/edit">Edit</a>
<%- include('../partials/deleteForm', {url: `/books/${book.id}`})%>
